<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    >

    <TextView
        android:id="@+id/line00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Morning Survey"
        android:layout_marginTop="@dimen/margin_between_questions"
        android:textSize="21dip"
        />

    <TextView
        android:id="@+id/line0"
        android:layout_below="@id/line00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Please answer the following questions:"
        android:layout_marginTop="@dimen/margin_between_questions"
        android:textSize="@dimen/text_size"
        />

    <TextView
        android:id="@+id/line1"
        android:layout_below="@id/line0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you feeling enthusiastic about the Project Planning meeting?"
        android:layout_marginTop="@dimen/margin_between_questions"
        android:layout_marginLeft="@dimen/margin_between_buttons"
        android:textSize="@dimen/text_size"
        />

    <Button
        android:id="@+id/button1a"
        android:layout_below="@id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="no"

        android:layout_margin="@dimen/margin_between_buttons"
        />

    <Button
        android:id="@+id/button1b"
        android:layout_below="@id/line1"
        android:layout_toRightOf="@+id/button1a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="yes"

        android:layout_margin="@dimen/margin_between_buttons"
        />
