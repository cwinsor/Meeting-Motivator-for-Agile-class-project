<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_item_attendee_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        tools:text="Attendee Name"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_attendee_gps_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_attendee_name_text_view"
        tools:text="Attendee GPS"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_attendee_activity_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_attendee_gps_text_view"
        tools:text="Attendee Activity"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_attendee_status_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_attendee_activity_text_view"
        tools:text="Attendee Status"
        android:padding="4dp"/>

</RelativeLayout>