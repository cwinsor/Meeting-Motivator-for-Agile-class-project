<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3b5998"
    android:id="@+id/mainscreen">


    <!-- Button to List Current Meetings -->
    <Button android:id="@+id/goto_meeting_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/meetinglist"
        android:textSize="22dp"
        android:background="@drawable/button"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="200dp"
        android:drawableLeft="@drawable/meetinglist"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu"/>

    <!-- Button to Create A Meeting -->
    <Button android:id="@+id/goto_create_meeting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/newmeeting"
        android:textSize="22dp"
        android:background="@drawable/button"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:drawableLeft="@drawable/newmeeting"
        android:textAppearance="@style/TextAppearance.AppCompat.Menu" />


</LinearLayout>